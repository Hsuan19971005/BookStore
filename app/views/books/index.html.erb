<h1>All Books</h1>
<hr>
<table>
  <form action="" name="" class="search-form">
    <div class="form-example">
      <input type="text" placeholder="Book name" name="keyword">
      <input type="submit" value="Search">
    </div>
  </form>
  <thead>
    <tr>
      <th>書名</th>
      <th>作者</th>
      <th>價錢</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Delete", book_path(book.id), method: 'delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New book", new_book_path %>
